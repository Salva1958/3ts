<?xml version='1.0' encoding='utf-8'?>
<widget id="es.3ts.blog.assoria" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>3ts Blog</name>
    <description>
        Una aplicaci√≥n para acceder al blog de TicTaxTop Asesores
    </description>
    <author email="salva@3ts.es" href="http://www.3ts.es">
        3TS
    </author>
    <content src="index.html" />
	<icon src="www/img/logo.png" />
	
	<plugin name="cordova-plugin-whitelist" spec="1" />
	
    <access origin="http://www.3ts.es" />
	<allow-navigation href="*" />
	
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
